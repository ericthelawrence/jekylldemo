// General Vars and settings

baseBg = #23242B
darkBg = darken(baseBg, 20%)

/* Bootstrap: Sticky footer styles
-------------------------------------------------- */

html,
body {
  height: 100%;
  /* The html and body elements cannot have any padding or margin. */

  /* account for nav */
  padding-top: 3em;
}

/* Wrapper for page content to push down footer */
#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  /* Negative indent footer by its height */
  margin: 0 auto -30px;
  /* Pad bottom by footer height */
  padding: 0 0 30px;
}

/* Set the fixed height of the footer here */
#footer {
  height: 30px;
  background-color: #f5f5f5;

  > .container {
  	padding-top: .7em;
  	font-size: .8em;

  	&, a {
  		color: #ddd;
  	}
  }
}

ul.footer-links {
  padding: 0;
  margin: auto;
  display: inline-block;
  margin-left: 2em;
  li {
    display: inline-block;
    list-style-type: none;
    padding-right: 1em;
  }
}

.navbar-brand {
	background: url(../img/jlogo-2x.png) no-repeat 0 0;
	background-size: contain;
	text-indent: -999em;
	display: block;
	width: 5.25em;
}

.navbar-inverse {
  background-color: darkBg;
}